<div class="container">
  <h1><%= @list.name %></h1>

  <%= link_to 'New bookmark', new_list_bookmark_path(@list), class: 'btn btn-secondary' %>
  <%= link_to 'Delete list',
    list_path(@list),
    data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'},
    class: 'btn btn-danger' %>

  <%= link_to 'back home', lists_path %>

  <ul>
    <% @movies.each do |id| %>
      <% @movie = Movie.find(id) %>
      <li><%= @movie.title %></li>
    <% end  %>
  </ul>
</div>
